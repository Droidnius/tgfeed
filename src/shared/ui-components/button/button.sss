.base
  margin: 0
  height: var(--size-height-40)
  padding: 0 var(--size-padding-12)
  border: none
  border-radius: var(--size-radius-20)
  box-shadow: none
  background-color: transparent
  font-family: inherit
  line-height: 1
  cursor: pointer
  user-select: none
  transition: opacity 200ms ease-in-out

  > svg
    width: 18px
    height: 18px

  &:focus
    outline: none

  &:active
    opacity: 0.5

  ._disabled
    opacity: 0.5
    cursor: not-allowed

  ._error
    //
