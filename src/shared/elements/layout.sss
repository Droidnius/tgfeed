.flexCenter
  display: flex
  justify-content: center
  align-items: center
  flex-shrink: 0

.fullscreen
  position: absolute
  inset: 0

.hidden
  position: absolute
  z-index: -1
  width: 0
  height: 0
  overflow: hidden

.before
  &::before
    z-index: -1
    position: absolute
    display: block
    content: ''

.after
  &::after
    z-index: -1
    position: absolute
    display: block
    content: ''
