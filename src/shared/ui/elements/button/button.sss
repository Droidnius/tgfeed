.base
  --local-transition-property: opacity, outline-color

  margin: 0
  width: var(--local-width, 100%)
  height: var(--local-height, 100%)
  padding: 0 16px
  gap: var(--layout-size-8)
  border: none
  border-radius: 8px
  box-shadow: none
  background-color: transparent
  cursor: pointer
  user-select: none
  font-family: inherit
  line-height: 0
  color: inherit

  &:active
    opacity: 0.5

  &:disabled
    opacity: 0.5
    cursor: not-allowed
