.base
  height: 32px
  align-items: center
  gap: 16px
  padding: 0 16px
  cursor: pointer

.icon
  pointer-events: none

.text
  pointer-events: none

.input
  position: absolute
  z-index: -1
  top: 0
  left: 0
  width: 100%
  height: 100%
  border-radius: 8px
  border: none
  background-color: transparent
  box-shadow: none
  transition: outline-color 200ms ease-in-out
  will-change: outline-color
  pointer-events: none
