.wrapper
  position: absolute
  top: 0
  width: min(100%, var(--layout-article-max-width))
  padding: 0 16px
  will-change: translate

  &._hidden
    display: none

  &._transparent
    visibility: hidden

.button
  margin-left: auto
  width: 40px
  padding: 0
  border-radius: 16px

  > svg
    opacity: 0.5

.base
  padding: 0
  border-radius: 16px
  background-color: var(--theme-color-surface-0)
  overflow: hidden

.padding
  width: 100%

  &._date
    height: var(--local-date-height)
