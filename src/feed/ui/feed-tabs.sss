.wrapper
  --local-height: 40px
  position: relative
  margin: 0 -8px
  width: calc(100% - var(--layout-header-size) * 2 + 16px)
  height: var(--local-height)
  overflow: hidden
  opacity: 1
  transition: opacity 300ms ease-in-out

  &._hidden
    opacity: 0

.base
  width: 100%
  height: 100%
  padding: 0 8px
  align-items: center
  gap: 12px
  scroll-snap-type: x proximity
  will-change: scroll-position
