.base
  position: absolute
  z-index: 1
  right: 0
  left: 0
  margin: 0 8px 8px
  padding: 8px 0
  border: solid var(--theme-color-surface-1)
  border-radius: 16px
  background-color: var(--theme-color-surface-2)
  transform-origin: 0 0
  opacity: 0
  will-change: scale, opacity

.button
  justify-content: flex-start
  height: 36px
  gap: 16px
  padding: 0 16px
  opacity: 0.75

  &._warning
    color: var(--theme-color-error)
