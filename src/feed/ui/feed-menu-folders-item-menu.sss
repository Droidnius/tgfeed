.base
  position: absolute
  z-index: 1
  right: 0
  left: 0
  margin: 0 8px 8px
  padding: 8px 0
  border: solid var(--theme-color-surface-3)
  border-radius: 12px
  background-color: var(--theme-color-surface-3)
  transform-origin: 0 0
  opacity: 0
  will-change: transform, opacity

.button
  justify-content: flex-start
  height: 36px
  gap: 16px
  padding: 0 16px

  &._warning
    color: var(--theme-color-error)
