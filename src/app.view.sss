.main
  flex: 1 1 auto
  flex-direction: column

  &._overflowHidden
    overflow: hidden

.menu
  top: safe(top)
  bottom: 0

  &._left
    left: safe(left)

  &._right
    right: safe(right)

._uniform
  .header
    &::before
      background: none

  .main
    padding-top: calc(safe(top) + var(--layout-float-top-bar-size))
    background-image: linear-gradient(to bottom, var(--theme-color-system), var(--theme-color-surface-0))

  .menu
    background-color: var(--theme-color-surface-2)
