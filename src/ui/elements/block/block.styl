position = absolute relative
for value in position
  ._position_{value}
    position: value

for value in '0px'
  correctValue = convert(value)
  ._top_{value}
    top: correctValue
  ._right_{value}
    top: correctValue
  ._bottom_{value}
    top: correctValue
  ._left_{value}
    top: correctValue

zIndex = range(-1, 10, 1)
for value in zIndex
  ._zIndex_{value}
    z-index: value

._flex
  display: flex
  flex-shrink: 0

flexDirection = column
for value in flexDirection
  ._flexDirection_{value}
    flex-direction: value

flexJustify = center flex-end
for value in flexJustify
  ._flexJustify_{value}
    justify-content: value

flexAlign = center flex-end
for value in flexAlign
  ._flexAlign_{value}
    align-items: value

flexGrow = range(1, 2, 1)
for value in flexGrow
  ._flexGrow_{value}
    flex-grow: value

width = 'auto' '100%' '100vw'
for value in width
  postfix = replace('%', 'pct', value)
  correctValue = convert(value)
  ._width_{postfix}
    width: correctValue
  ._minWidth_{postfix}
    min-width: correctValue
  ._maxWidth_{postfix}
    max-width: correctValue

height = 'auto' '100%' '100vh'
for value in height
  postfix = replace('%', 'pct', value)
  correctValue = convert(value)
  ._height_{postfix}
    height: correctValue
  ._minHeight_{postfix}
    min-height: correctValue
  ._maxHeight_{postfix}
    max-height: correctValue
